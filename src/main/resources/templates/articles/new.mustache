
{{>layouts/header}}


<form class="container" action="/articles/posts" method="post">
    <div class="mb-3">
        <label class="form-label">제목</label>

        <input type="text" class="form-control" name="title">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>

        <textarea class="form-control" rows="3" name="content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <a href="/articles">back</a>
</form>


<form class="container2" action="/articles/delete" method="get">
    <button type="submit" class="btn btn-danger">데이터 전체삭제</button>
</form>

<form class="container2" action="/articles/list" method="get">
    <button type="submit">데이터 전체호출</button>
</form>

{{>layouts/footer}}